# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Advertisements
GET     /advertisements/show 		controllers.Advertisement.show
GET     /advertisements/:uid		controllers.Advertisement.get(uid: Int)
PUT     /advertisements/put 		controllers.Advertisement.put()
POST    /advertisements/:uid        controllers.Advertisement.post(uid: Int)
DELETE  /advertisements/:uid		controllers.Advertisement.delete(uid: Int)

